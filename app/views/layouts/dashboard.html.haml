!!!
%html{ 'ng-app' => :dashboard }
  %head
    %title Dashboard
    = stylesheet_link_tag    'http://fonts.googleapis.com/css?family=Lora:400,700'
    = stylesheet_link_tag    'http://fonts.googleapis.com/css?family=Roboto:900'
    = stylesheet_link_tag    'http://fonts.googleapis.com/css?family=Lato:300,400,700'
    = stylesheet_link_tag    'http://fonts.googleapis.com/css?family=Source+Code+Pro'
    = stylesheet_link_tag    :application, media: :all, 'data-turbolinks-track' => true
    = javascript_include_tag :application, 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body.dashboard.bootstrap-enabled{ macros: true }
    = yield
